---
import Layout from '../layouts/Layout.astro';

const paintings = [
	{
		title: "Mattel",
		year: 2022,
		color: '#e0218a',
	},
	{
		title: "Kermit",
		year: 2022,
		color: '#74bd6a',
	},
	{
		title: "TS0323",
		year: 2023,
		color: '#FF3131',
	},
]
---

<Layout title="This Might Be Art">
	<main>
		<div class="wrapper">
			<!-- <h1>PURPORTED ART</h1> -->
			{paintings.map(painting => 
				<div style={`background-color: ${painting.color}; height: 100px; display: flex; justify-content: center; align-items: center; flex-direction: column;`}>
					<h2>{painting.title}</h2>
					<h3>{painting.year}</h3>
				</div>
			)}
		</div>
	</main>
</Layout>

<style lang="scss">

	.wrapper {
		display: flex;
		justify-content: space-between;
		align-items: center;
		width: 80vw;

		div {
			width: calc(33% - 20px);

			&:hover {
				cursor: pointer;
					* {
						opacity: 1;
					}
			}

			* {
				color: #fafafa;
				opacity: 0;
				transition-duration: 1s;
			}
		}
	}

	h1 {
		margin: 0 auto;
		color: var(--headline-color)
	}

	h2, h3 {
		margin: 0;
	}

	p {
		color: hsl(0, 0%, 20%);
		text-transform: uppercase;
		font-weight: 500;
	}

	main {
		margin: auto;
		padding: 1em;
	}
	
	main * {
		color: black;
	}
	
	body {
		background-color: #fafafa;
	}
</style>
